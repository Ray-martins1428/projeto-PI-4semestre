<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Ultragaz</title>

  <link rel="stylesheet" href="/css/dashboard.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>

  <main class="container">

    <%- include('partials/navbar') %>

      <section class="dash-container">
        <div class="container-content">

          <h1>Dashboard</h1>

          <!-- FILTROS -->
          <div class="dash-filtros">
            <label>De: <input type="date" id="startDate"></label>
            <label>Até: <input type="date" id="endDate"></label>
            <button id="btnAplicarFiltros">Aplicar</button>
            <button id="btnHoje">Hoje</button>
          </div>

          <!-- CARDS -->
          <!-- CARDS -->
          <div class="dash-cards">

            <div class="dash-card">
              <h3>Itens Vendidos</h3>
              <p id="card-itens">0</p>
            </div>

            <div class="dash-card">
              <h3>Faturamento (R$)</h3>
              <p id="card-faturamento">0.00</p>
            </div>

            <div class="dash-card">
              <h3>Lucro (R$)</h3>
              <p id="card-lucro">0.00</p>
            </div>

          </div>

          <!-- GRÁFICOS -->
          <div class="dash-graficos">
            <div>
              <h3>Faturamento Diário</h3>
              <canvas id="chartLinha"></canvas>
            </div>

            <div>
              <h3>Faturamento Comparativo</h3>
              <canvas id="chartBarra"></canvas>
            </div>

            <div>
              <h3>Produtos Mais Vendidos</h3>
              <canvas id="chartPizza"></canvas>
            </div>
          </div>

          <!-- BOTÃO DE PDF -->
          <div style="margin-top: 25px;">
            <button id="btnPDF" style="
            padding: 10px 20px;
            background: #0061A2;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;">
              Gerar PDF
            </button>
          </div>

          <!-- TABELA -->
          <h2 style="margin-top:30px;">Últimas Vendas</h2>

          <table class="tabela-dash">
            <thead>
              <tr>
                <th>ID</th>
                <th>Data</th>
                <th>Produto</th>
                <th>Qtd</th>
                <th>Valor Unit.</th>
                <th>Total (R$)</th>
              </tr>
            </thead>
            <tbody id="ultimas-vendas-body"></tbody>
          </table>

        </div>
      </section>

  </main>

  <script src="/js/dashboard.js"></script>
</body>

</html>
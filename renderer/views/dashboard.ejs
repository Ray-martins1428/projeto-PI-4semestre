<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard Gonçalves</title>
  <link rel="stylesheet" href="/css/dashboard.css" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
  <%- include('partials/navbar') %>

    <main class="container">
      <section class="dash-container">
        <div class="container-content">

          <!-- CARTÕES -->
          <div class="dash-cards">
            <div class="dash-card">
              <h3>Total de Vendas</h3>
              <p id="cartTotalVendas">0</p>
            </div>
            <div class="dash-card">
              <h3>Faturamento</h3>
              <p id="cartFaturamento">R$ 0,00</p>
            </div>
            <div class="dash-card">
              <h3>Custo</h3>
              <p id="cartCusto">R$ 0,00</p>
            </div>
            <div class="dash-card">
              <h3>Lucro</h3>
              <p id="cartLucro">R$ 0,00</p>
            </div>
          </div>

          <!-- FILTROS -->
          <div class="filtros-dashboard">
            <input type="number" id="filtroAno" placeholder="Ano" />
            <input type="number" id="filtroMes" placeholder="Mês" min="1" max="12" />
            <input type="number" id="filtroDia" placeholder="Dia" min="1" max="31" />
            <button id="btnAplicarFiltros">Aplicar Filtros</button>
          </div>

          <!-- GRÁFICO -->
          <div style="margin-top: 30px;">
            <h2>Vendas Mensais</h2>
            <canvas id="vendasMensais" width="600" height="250"></canvas>
          </div>

          <!-- TABELA DE VENDAS -->
          <div style="margin-top: 30px;">
            <h2>Vendas Recentes</h2>
            <table id="tabelaVendasRecentes">
              <thead>
                <tr>
                  <th>Data</th>
                  <th>Produto</th>
                  <th>Qtd</th>
                  <th>Valor (R$)</th>
                  <th>Usuário</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>

        </div>
      </section>
    </main>

    <script src="/js/dashboard.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/cria-func.css">
  <title>Cadastro de Funcionário</title>
</head>

<body>
  <main class="container">
    <%- include('partials/navbar') %>

    <main class="container">
      <section class="venda-container">
        <div class="venda-tela">
          <form id="form-venda">
            <h2>Cadastro de Colaborador</h2>

            <div class="input-texto">
              <!-- Nome completo (linha inteira) -->
              <input type="text" id="nome" placeholder="Nome completo" />

              <!-- CPF e Data de nascimento -->
              <input type="text" id="cpf" placeholder="CPF" />
              <input type="date" id="dataNascimento" placeholder="Data de Nascimento" />

              <!-- Email e Celular -->
              <input type="email" id="email" placeholder="Email" />
              <input type="text" id="numero" placeholder="Celular" />

              <!-- Endereço (linha inteira) -->
              <input type="text" id="endereco" placeholder="Endereço" />

              <!-- Complemento e Bairro -->
              <input type="text" id="complemento" placeholder="Complemento/Nº" />
              <input type="text" id="bairro" placeholder="Bairro" />
            </div>

            <div class="grupo-radios">
              <div>
                <input type="radio" id="gas" name="funcao">
                <label for="gas">Ent. de Gás</label>
              </div>
              <div>
                <input type="radio" id="secretaria" name="funcao">
                <label for="secretaria">Secretaria</label>
              </div>
              <div>
                <input type="radio" id="deposito" name="funcao">
                <label for="deposito">Aux. Depósito</label>
              </div>
            </div>

            <div class="grupo-radios">
              <div>
                <input type="radio" name="status" id="ativo">
                <label for="ativo">Ativo</label>
              </div>
              <div>
                <input type="radio" name="status" id="inativo">
                <label for="inativo">Inativo</label>
              </div>
            </div>

            <div class="mensagem-erro" id="mensagemErro"></div>

            <button class="btn-cadastrar" id="cadastrar">Cadastrar</button>
          </form>
        </div>

        <div id="toast" class="toast"></div>
      </section>
    </main>
  </main>

  <script src="/js/cria-func.js"></script>
</body>

</html>
